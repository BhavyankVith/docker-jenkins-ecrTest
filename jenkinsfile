pipeline {
  agent any

  parameters {
    string(
      name: 'ECR_REPO',
      defaultValue: 'simple-calculator',
      description: 'ECR repository name'
    )
  }

  environment {
    AWS_REGION     = 'us-east-2'
    AWS_ACCOUNT_ID = '374073887865'
    // adjust if needed so Jenkins can find docker/aws
    PATH = "/usr/local/bin:/opt/homebrew/bin:${env.PATH}"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker image') {
      steps {
        script {
          def tag = env.BUILD_NUMBER ?: 'latest'
          env.IMAGE_TAG = tag

          sh """
            set -e
            echo "Building image ${params.ECR_REPO}:${tag}"
            docker build -t ${params.ECR_REPO}:${tag} .
          """
        }
      }
    }

    stage('Login, Ensure Repo & Push to ECR') {
      steps {
        // USE AWS Credentials type (from AWS Credentials / CloudBees plugin)
        withCredentials([[
          $class: 'AmazonWebServicesCredentialsBinding',
          credentialsId: 'aws-creds'
        ]]) {
          script {
            def repoUri = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${params.ECR_REPO}"
            env.REPO_URI = repoUri
            def tag = env.IMAGE_TAG

            sh """
              set -e

              echo "Using AWS credentials from Jenkins (access key ends with: \${AWS_ACCESS_KEY_ID: -4})"
              export AWS_REGION=${AWS_REGION}

              echo "Checking ECR repo '${params.ECR_REPO}'..."
              aws ecr describe-repositories \
                --repository-names "${params.ECR_REPO}" \
                --region ${AWS_REGION} >/dev/null 2>&1 || \
              aws ecr create-repository \
                --repository-name "${params.ECR_REPO}" \
                --region ${AWS_REGION} >/dev/null

              echo "Logging into ECR..."
              aws ecr get-login-password --region ${AWS_REGION} | \
                docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com

              echo "Tagging image..."
              docker tag ${params.ECR_REPO}:${tag} ${repoUri}:${tag}

              echo "Pushing image to ECR..."
              docker push ${repoUri}:${tag}
            """

            echo "Image pushed: ${repoUri}:${tag}"
          }
        }
      }
    }
  }

  post {
    success {
      echo "✅ Done: ${env.REPO_URI}:${env.IMAGE_TAG}"
    }
    failure {
      echo "❌ Pipeline failed, check logs."
    }
  }
}
