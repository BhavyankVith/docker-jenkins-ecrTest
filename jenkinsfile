pipeline {
  agent any

  // üîπ Parameter: ECR repository name
  parameters {
    string(
      name: 'ECR_REPO',
      defaultValue: 'simple-calculator',
      description: 'ECR repository name'
    )
  }

  environment {
    AWS_REGION     = 'us-east-2'
    AWS_ACCOUNT_ID = '374073887865'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker image') {
      steps {
        script {
          def tag = env.BUILD_NUMBER ?: 'latest'
          env.IMAGE_TAG = tag
          echo "Building image ${params.ECR_REPO}:${tag}"

          sh """
            set -e
            docker build -t ${params.ECR_REPO}:${tag} .
          """
        }
      }
    }

    stage('Login, Ensure Repo & Push to ECR') {
      steps {
        // üîπ Use existing Jenkins credential (aws-creds)
        withCredentials([
          usernamePassword(
            credentialsId: 'aws-creds',
            usernameVariable: 'AWS_ACCESS_KEY_ID',
            passwordVariable: 'AWS_SECRET_ACCESS_KEY'
          )
        ]) {
          script {
            def repoUri = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${params.ECR_REPO}"
            env.REPO_URI = repoUri

            sh """
              set -e

              export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
              export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
              export AWS_REGION=${AWS_REGION}

              echo "Checking ECR repo: ${params.ECR_REPO}"

              aws ecr describe-repositories --repository-names "${params.ECR_REPO}" --region ${AWS_REGION} >/dev/null 2>&1 || \
              aws ecr create-repository --repository-name "${params.ECR_REPO}" --region ${AWS_REGION} >/dev/null

              echo "Logging in to ECR..."
              aws ecr get-login-password --region ${AWS_REGION} | \
                docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com

              echo "Tagging and pushing image..."
              docker tag ${params.ECR_REPO}:${IMAGE_TAG} ${repoUri}:${IMAGE_TAG}
              docker push ${repoUri}:${IMAGE_TAG}
            """

            echo "Image pushed: ${repoUri}:${env.IMAGE_TAG}"
          }
        }
      }
    }
  }

  post {
    success {
      echo "‚úÖ Done: ${env.REPO_URI}:${env.IMAGE_TAG}"
    }
    failure {
      echo "‚ùå Pipeline failed, check logs."
    }
  }
}
